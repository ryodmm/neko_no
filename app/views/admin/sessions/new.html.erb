<div class="container">
  <div class="row">
    <div class="col-3 p-3">
      <h4 class="table-active">
        <div style="text-align: center">管理者ログイン</div>
      </h4>
    </div>
  </div>

  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="row pb-2">
      <div class="col-2 offset-1">
        <%= f.label :"メールアドレス" %>
      </div>
      <div class="col-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50x20" %>
      </div>
    </div>

    <div class="row">
      <div class="col-2 offset-1">
        <%= f.label :"パスワード" %>
      </div>
      <div class="col-6">
        <%= f.password_field :password, autocomplete: "current-password", size: "50x20" %>
      </div>
    </div>

    <div class="actions pt-3">
      <div class="col-2 offset-3">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>