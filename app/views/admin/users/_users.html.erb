<% users.each do |user| %>
  <table>
    <th>
      <td>
        <%= link_to admin_user_path(user.id) do %>
          <%= image_tag user.get_profile_image(70,70) %>
        <% end %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td>
        <%= user.introduction %>
      </td>
      <td>
        <% if user.is_freeze? %>
          <%= button_to 'To Unfreeze', remove_freeze_admin_user_path(user), method: :delete %>
        <% else %>
          <%= button_to 'To Freeze', add_freeze_admin_user_path(user), method: :patch %>
        <% end %>
      </td>
    </th>
  </table>
<% end %>
