<%= form_with model: @user, method: :patch, local:true do |f| %>

  <%= image_tag @user.get_profile_image(70,70) %>
  プロフィール写真を変更
  <%= f.file_field :profile_image, accept: "image/*" %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :ニックネーム %><br>
    <%= f.text_field :name, :maxlength => "10" %>
  </div>

  <div class="field">
    <%= f.label :自己紹介 %><br>
    <%= f.text_area :introduction, :maxlength => "250" %>
  </div>

  <%= f.submit '更新', class: "btn btn-success" %>

  <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger" %>

<% end %>