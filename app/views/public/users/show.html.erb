<% if @user.released? or @user.id == current_user.id %>
<table>
    <td><%= image_tag @user.get_profile_image(70,70) %></td>
    <td>
      <%= @user.name %></br>
      <%= @user.introduction %>
    </td>
    <td>
      <%= @user.followings.count %></br>
      <%= link_to "フォロー中", user_followings_path(@user.id) %>
    </td>
    <td>
      <%= @user.followers.count %></br>
      <% if @user.id == current_user.id %>
        <%= link_to "あなたをフォロー", user_followers_path(@user.id) %>
      <% else %>
        <%= link_to "フォロワー", user_followers_path(@user.id) %>
      <% end %>
    </td>

    <td>
      <% if @user.id == current_user.id %>
        <%= link_to "プロフィールを編集", edit_user_path(@user.id), class: "btn btn-success" %>
      <% elsif current_user.following?(@user) %>
        <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-secondary" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-primary" %>
      <% end %>

    <% if current_user.id == @user.id %>
      <% if @user.released? %>
        <%= link_to '非公開にする', nonrelease_user_path(@user.id), method: :patch%>
      <% else %>
        <%= link_to '公開する', release_user_path(@user.id), method: :patch%>
      <% end %>
    <% end %>
    </td>
</table>

<% @users.each do |user| %>
  <%= link_to user.name, user_path(user.id) %>
<% end %>

<% @posts.each do |post| %>
  <table>
      <tr>
        <td>
          <%= link_to post_path(post.id) do %>
          <%= image_tag post.image, size: "300x200" %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>
          <%= post.introduction %>
        </td>
      </tr>
      <tr>
        <td>
          <%= post.created_at.strftime('%Y/%m/%d') %>
        </td>
      </tr>
    </table>
<% end %>

<% else %>
  このユーザは非公開です

<% end %>