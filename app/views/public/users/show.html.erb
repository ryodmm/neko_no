<table>
    <td><%= image_tag @user.get_profile_image(70,70) %></td>
    <td>
      <%= @user.name %></br>
      <%= @user.introduction %>
    </td>
    <td>
      <%= @user.followings.count %></br>
      <%= link_to "フォロー中", user_followings_path(@user.id) %>
    </td>
    <td>
      <%= @user.followers.count %></br>
      <% if @user.id == current_user.id %>
        <%= link_to "あなたをフォロー", user_followers_path(@user.id) %>
      <% else %>
        <%= link_to "フォロワー", user_followers_path(@user.id) %>
      <% end %>
    </td>

    <td>
      <% if @user.id == current_user.id %>
        <%= link_to "プロフィールを編集", edit_user_path(@user.id), class: "btn btn-success" %>
      <% elsif current_user.following?(@user) %>
        <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-secondary" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-primary" %>
      <% end %>
    </td>
</table>

<% @users.each do |user| %>
  <%= link_to user.name, user_path(user.id) %>
<% end %>

